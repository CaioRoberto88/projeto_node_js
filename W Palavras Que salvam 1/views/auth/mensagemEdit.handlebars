<h1 class="text-center my-3">Editar sua reflexão</h1>
<form action="/mensagemEdit" method="post">
  <input type="hidden" name="id" value="{{mensagem.id}}" />
  <div class="row d-block g-md-3 g-0">
    <div class="col-8 centralizar">
      <label class="form-label" for="titulo">Título</label>
      <input
        class="form-control shadow-none"
        type="text"
        name="titulo"
        id="titulo"
        placeholder="{{mensagem.titulo}}"
        required
      />
    </div>
    <div class="col-8 centralizar">
      <label class="form-label" for="mensagem">Mensagem</label>
      <textarea
        class="form-control shadow-none h-25"
        name="mensagem"
        id="mensagem"
        placeholder="Insira uma mensagem"
        required
      >{{mensagem.mensagem}}</textarea>
    </div>
    <div class="col-8 centralizar">
      <input class="btn btn-geral my-3" type="submit" value="Editar" />

    <p>
      <a class="link-geral" href="/painelDeUsuario">Voltar para Painel de
        usuário</a>
    </p>
    </div>
   
  </div>
</form>
